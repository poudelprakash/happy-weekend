<p id="notice"><%= notice %></p>

<header>
  <div class="container">
    <div class="row">
      <div class="logo col-xs-12 col-sm-3 col-md-3">
        <h1>
          <a href="<%= root_url %>" title="Happy Weekend">Happy Weekend</a>
        </h1>
      </div>
      <%= link_to "Set My Preferences", preferences_path, class:"col-xs-12 col-sm-3 col-md-2 pull-right"   %>
    </div>
  </div>
</header>
<main>
  <div class="container">
    <div class="row">
      <div class="common-block col-xs-12 col-sm-12 col-md-12">
        <h2 class="heading col-xs-12 col-sm-12 col-md-12">Locations</h2>
        <div class="listing">
          <% @locations.each do |location| %>
          <div class="grid big col-xs-12 col-sm-4 col-md-2">
            <%= link_to(location) do %>
              <div class="grid__image">
                <img src="images/b.jpg" alt="poster">
              </div>
              <div class="grid__info">

                  <h3 class="grid__title"><%=location.name %></h3><p class="grid__location">
                <% geo_localization = "#{location.latitude},#{location.longitude}" %>
                <%   query = Geocoder.search(geo_localization).first %>
                 <%=  query.address %></p>

              </div>
            <%end %>
          </div>
          <%end %>

        </div>
        <h2 class="heading col-xs-12 col-sm-12 col-md-12">Events</h2>

        <div class="listing">
          <% @events.all.each do |location| %>
            <div class="grid big col-xs-12 col-sm-4 col-md-2">
              <%= link_to(location) do %>
                <div class="grid__image">
                  <img src="images/b.jpg" alt="poster">
                </div>
                <div class="grid__info">

                  <h3 class="grid__title"><%=location.name %></h3><p class="grid__location">
                  <%# geo_localization = "#{location.latitude},#{location.longitude}" %>
                  <%#  query = Geocoder.search(geo_localization).first %>
                  <%#=  query.address %></p>

                </div>
              <% end %>

            </div>
          <%end %>

        </div>

      </div>
    </div>
  </div>
</main>
<footer>
  <div class="container">
    <div class="row">
      <p>Footer</p>
    </div>
  </div>
</footer>
