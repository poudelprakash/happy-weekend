<header>
  <div class="container">
    <div class="row">
      <div class="logo col-xs-12 col-sm-3 col-md-3">
        <h1>
          <a href="index.html" title="Happy Weekend">Happy Weekend</a>
        </h1>
      </div>
    </div>
  </div>
</header>
<main>
  <div class="container">
    <div class="row">
      <div class="common-block col-xs-12 col-sm-12 col-md-12">
        <h2 class="heading col-xs-12 col-sm-12 col-md-12">Preferences</h2>
        <div class="col-xs-12 col-sm-12 col-md-12">
          <p class= "info-box">We will tailor your dashboard according to your preference. All you need to
            do is select what suits you best.</p>

          <%= form_tag preferences_path, :method => 'post' do %>
              <p>
                <label for="audience">People</label><br>
                <% Audience.all.each do |audience|%>
                <input type="radio" name="audience" value="<%= audience.name %>"><%= audience.name %><br>
                    <% end %>
              </p>
              <p>
                <label>Choose categories you are most interested in.</label><br>
                <% Category.all.each do |category|%>
                    <input type="checkbox" name="category_id[]" value="<%= category.id %>"><%= category.name %><br>
                <% end %>
              </p>
              <!--<p>-->
                <!--<label>Suggestion based on distance</label>-->
                <!--<select>-->
                  <!--<option>&#60; 5km</option>-->
                  <!--<option>&#62; 5km</option>-->
                <!--</select>-->
              <!--</p>-->
              <!--<p>-->
                <!--<label>Preferred Time</label>-->
                <!--<span>From</span><input type="time">-->
                <!--<span>To</span><input type="time">-->
              <!--</p>-->
              <input class="pull-right" type="submit" value="Save Preferences">
          <% end %>

        </div>
      </div>
    </div>
  </div>
</main>
<footer>
  <div class="container">
    <div class="row">
      <p>Footer</p>
    </div>
  </div>
</footer>